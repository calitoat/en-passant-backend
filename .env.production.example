# ===========================================
# TRUSTBRIDGE PRODUCTION ENVIRONMENT
# ===========================================
# Copy this to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=production

# Database (Neon Postgres - Use pooled connection for production)
# Format: postgresql://user:password@host/database?sslmode=require
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/neondb?sslmode=require

# JWT Configuration (Generate secure secret)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-64-byte-hex-secret-here
JWT_EXPIRES_IN=24h

# Ed25519 Signing Keys (Base64 encoded)
# Generate with: npm run generate-keys
ED25519_PRIVATE_KEY=your-base64-private-key
ED25519_PUBLIC_KEY=your-base64-public-key

# Badge Configuration
BADGE_EXPIRY_DAYS=7

# Google OAuth Configuration
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=https://api.trustbridge.app/api/auth/google/callback

# LinkedIn OAuth Configuration
# Get from: https://www.linkedin.com/developers/apps
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_CALLBACK_URL=https://api.trustbridge.app/api/auth/linkedin/callback

# Session Secret (Generate secure secret)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=your-32-byte-hex-secret-here

# Frontend URL (for redirects after OAuth)
FRONTEND_URL=https://trustbridge.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Trusted Proxies (comma-separated, for load balancers)
TRUST_PROXY=1
